<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.rog/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

	<insert id="create">
		insert into board values(
			#{bno},
			#{title},
			#{content},
			#{writer},
			#{regdate},
			#{viewcnt},
		)
	</insert>
	
	<select id="read" resultMap="BoardResultMap">
		select * from board where bno = #{bno}
	</select>
	
	<update id="update">
		update board set
		title = #{title},
		content = #{content}
		where bno = #{bno}
	</update>
	
	<select id="list" resultType="BoardVO">
		select * from board where bno > 0
		order by bno desc, regdate desc
	</select>
	
	<select id="listPaging" resultType="BoardResultMap">
		select * from board
		where bno > 0
		order by board desc, regdate desc
		limit #{page}, 10
	</select>
	
	<select id="listCriteria" resultMap="BoardResultMap">
		select * from board
		where bno > 0
		order by bno desc, regdate desc
		limit #{pageStart}, #{perPageNum}
	</select>
	
	<select id="countBoard" resultType="int">
		select count(bno) from board
		where bno > 0
	</select>
	
	<resultMap id="BoardResultMap" type="BoardVO">
        <id property="bno" column="bno"/>
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="writer" column="writer" />
        <result property="regDate" column="regdate" />
        <result property="viewCnt" column="viewcnt" />
    </resultMap>
	
</mapper>